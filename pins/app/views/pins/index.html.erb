
<h1>Pins</h1>

<div class="row">
  <%= paginate @pins %>
</div>

<div class="row">
<% @pins.each do |pin| %>

  <div class="pin col-xs-3">
    <h3><%= pin.user.username %></h3>
    <%= link_to image_tag(pin.photo_url, class: "img-responsive"), pin.url %>
  </div>

<% end %>
</div>

<%= paginate @pins %>
